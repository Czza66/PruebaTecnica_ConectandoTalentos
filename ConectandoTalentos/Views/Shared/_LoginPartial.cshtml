@using ConectandoTalentosSolucion.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @inject UserManager<ApplicationUser> UserManager

            @{
                var usuario = await UserManager.GetUserAsync(User);
            }
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bienvenido/a @(@usuario.Nombre1+ " "+usuario.Apellido1)</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline text-primary" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-outline-primary ms-2"><i class="bi bi-box-arrow-left me-1"></i> Salir</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="btn btn-outline-primary ms-2"
            asp-area="Cliente"
            asp-controller="Login"
            asp-action="Index">
                <i class="bi bi-box-arrow-in-right in-right me-1"></i> Acceder
            </a>
        </li>
}
</ul>
